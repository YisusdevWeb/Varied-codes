{% if settings.whatsapp_number != blank %}
    <a id="whatsapp-link" class="whatsapp-button" target="_blank">
      <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="WhatsApp">
    </a>
  
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        var phoneNumber = "{{ settings.whatsapp_number | replace: '+', '' }}";
        var defaultMessage = "{{ settings.whatsapp_message | url_encode }}";
        var currentPage = encodeURIComponent(window.location.href);
  
        var fullMessage = defaultMessage + "%0A%0Aüìç Escribo desde: " + currentPage;
        var whatsappURL = "https://wa.me/" + phoneNumber + "?text=" + fullMessage;
  
        document.getElementById("whatsapp-link").setAttribute("href", whatsappURL);
      });
    </script>
  
    <style>
      .whatsapp-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
  
        transition: all 0.3s ease-in-out;
      }
      .whatsapp-button img {
        width: {{ settings.whatsapp_icon_size }}px;
        height: {{ settings.whatsapp_icon_size }}px;
      }
      .whatsapp-button:hover {
        transform: scale(1.1);
      }
    </style>
  {% endif %}
  

